{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "@apps/*": [
        "./apps/*"
      ],
      "@libs/*": [
        "./libs/*"
      ],
      "@libs/ui-utils": [
        "./libs/ui-utils/src/public-api.ts"
      ],
    }
  },
  "include": ["src", "apps", "libs"],
}
